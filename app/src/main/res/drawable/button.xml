<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >

        <shape>

            <solid
                android:color="@color/teal_200"
            />

            <stroke
            android:width="1dp"
            />

            <corners
            android:radius="10dp" />

            <padding

            android:left="10dp"

            android:top="10dp"

            android:right="10dp"

            android:bottom="10dp" />

        </shape>

    </item>

    <item>

        <shape>

            <gradient
                android:startColor="@color/teal_200"
            android:endColor="@color/teal_200"

            android:angle="270" />

            <stroke

            android:width="1dp" />

            <corners

            android:radius="3dp" />

            <padding

            android:left="10dp"

            android:top="10dp"

            android:right="10dp"

            android:bottom="10dp" />

        </shape>

    </item>

</selector>

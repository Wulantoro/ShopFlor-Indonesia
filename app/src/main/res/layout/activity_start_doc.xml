<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    tools:context=".Activity.StartDocActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvwc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="workcenter"/>
        <TextView
            android:id="@+id/tvusername1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvwc2"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:text="username"/>

        <TextView
            android:id="@+id/tvnamawc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvusername1"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:text="wcname"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/btnscan"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:text="Scan Barcode"/>

    <Button
        android:id="@+id/btnAdd_doc"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:text="Add Document"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="ip sercer "/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.CriteriaQCActivity"
    tools:showIn="@layout/activity_criteria_qc">


    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/dashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5mdp"
            android:layout_weight="8"
            >

            <TextView
                android:id="@+id/tvnoprod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10font_mdp"
                android:text="No. Produksi : "/>

            <TextView
                android:id="@+id/tvnoprod0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvnoprod"
                android:textSize="@dimen/_10font_mdp"
                android:text="ini no produksi"/>

            <TextView
                android:id="@+id/tvnmprod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:layout_below="@id/tvnoprod0"
                android:textSize="@dimen/_10font_mdp"
                android:text="Nama Produk"/>
            <TextView
                android:id="@+id/tvnmprod1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvnmprod"
                android:textSize="@dimen/_10font_mdp"
                android:text="ini nama produk"/>

            <TextView
                android:id="@+id/tvsequence5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvnmprod1"
                android:layout_marginTop="@dimen/_5mdp"
                android:textSize="@dimen/_10font_mdp"
                android:text="Sequence"/>
            <TextView
                android:id="@+id/tvsequence1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsequence5"
                android:textSize="@dimen/_10font_mdp"
                android:text="ini sequence"/>

            <TextView
                android:id="@+id/tvseqqty0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvsequence1"
                android:layout_marginTop="@dimen/_5mdp"
                android:textSize="@dimen/_10font_mdp"
                android:text="Sequence Qty"/>
            <TextView
                android:id="@+id/tvseqqty1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvseqqty0"
                android:textSize="@dimen/_10font_mdp"
                android:text="ini sequence qty"/>

            <TextView
                android:id="@+id/tvtglsel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                android:layout_below="@id/tvseqqty1"
                android:textSize="@dimen/_10font_mdp"
                android:text="Tanggal Selesai :"/>
            <TextView
                android:id="@+id/tvtglsel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvtglsel"
                android:textSize="@dimen/_10font_mdp"
                android:text="iin tanggal selesai"/>

            <TextView
                android:id="@+id/tvjamsel0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvtglsel1"
                android:layout_marginTop="@dimen/_5mdp"
                android:textSize="@dimen/_10font_mdp"
                android:text="Jam Selesai"/>
            <TextView
                android:id="@+id/tvjamsel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvjamsel0"
                android:textSize="@dimen/_10font_mdp"
                android:text="ini jam selesai"/>

            <TextView
                android:id="@+id/tvdocsts0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvjamsel1"
                android:layout_marginTop="@dimen/_5mdp"
                android:textSize="@dimen/_10font_mdp"
                android:text="Doc.Status"/>
            <TextView
                android:id="@+id/tvdocsts1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvdocsts0"
                android:textSize="@dimen/_10font_mdp"
                android:text="ini doc status"
                />
        </RelativeLayout>


<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <!--in qty, out qty, woekcenter-->
        <RelativeLayout
            android:id="@+id/dashboard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <RelativeLayout
                android:id="@+id/content1"
                android:layout_width="150dp"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/tvInputQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10font_mdp"
                    android:text="Input Quantity"
                    />
                <TextView
                    android:id="@+id/tvInputQty3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvInputQty"
                    android:textSize="@dimen/_10font_mdp"
                    android:textColor="@color/blue_A700"
                    android:text="iniiiiii input quantity"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/content2"
                android:layout_width="150dp"
                android:layout_toRightOf="@id/content1"
                android:layout_height="70dp"
                >
                <TextView
                    android:id="@+id/tvOutputQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10font_mdp"
                    android:text="Output Quantity"/>
                <TextView
                    android:id="@+id/tvOutputQty1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvOutputQty"
                    android:textSize="@dimen/_10font_mdp"
                    android:textColor="@color/blue_A700"
                    android:text="ini output quantity"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/content2">
                <TextView
                    android:id="@+id/tvWorkcenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_A700"
                    android:textSize="@dimen/_12font_mdp"
                    android:text="workcemter"/>
                <TextView
                    android:id="@+id/tvdocentry3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tvWorkcenter"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:text="ini docentry"/>
                <TextView
                    android:id="@+id/tvid4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tvdocentry3"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:text="id"/>
            </RelativeLayout>
            <!--in qty, out qty, woekcenter-->

            <RelativeLayout
                android:id="@+id/relCrit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/content1"
                >

                <Button
                    android:id="@+id/tvCrit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Simpan Criteria"
                    android:background="@drawable/button"
                    />
            </RelativeLayout>

            <TableLayout
                android:id="@+id/tabCrit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/relCrit">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Criteria"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:text="Criteria Desc"
                        android:textSize="18dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:text="Standard"
                        android:textSize="18dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:text="Actual"
                        android:textSize="18dp" />
                </TableRow>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvActualCrit"
                    android:layout_below="@id/tabCrit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/actual_crit_list">
                </androidx.recyclerview.widget.RecyclerView>

            </TableLayout>
        </RelativeLayout>
</ScrollView>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line">
    <TextView
        android:id="@+id/tvstatus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:text="ini status"
        />

    <TextView
        android:id="@+id/tvprodcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tvstatus2"
        android:textColor="@color/white"
        android:text="prodcode"/>

    <TextView
        android:id="@+id/tvposted6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvprodcode"
        android:textColor="@color/white"
        android:text="posted"/>

</RelativeLayout>


</RelativeLayout>


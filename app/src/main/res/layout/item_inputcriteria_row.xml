<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/_5mdp"
    card_view:cardCornerRadius="@dimen/_5mdp"
    card_view:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

   <LinearLayout

       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/_10mdp"
       android:orientation="horizontal">

       <TextView
           android:id="@+id/tvcriteria2"
           android:layout_width="@dimen/_90mdp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/_10mdp"
           android:text="Criteria "
           android:textStyle="bold"
           android:textSize="@dimen/_15font_mdp"/>

       <TextView
           android:id="@+id/tvcritdesc2"
           android:layout_width="@dimen/_130mdp"
           android:layout_height="wrap_content"
           android:text="Criteria desc "
           android:textSize="@dimen/_15font_mdp"
           android:textStyle="bold"/>

       <TextView
           android:id="@+id/tvstandard2"
           android:layout_width="@dimen/_80mdp"
           android:layout_height="wrap_content"
           android:text="Standard "
           android:textSize="@dimen/_15font_mdp"
           android:textStyle="bold"/>

       <TextView
           android:id="@+id/tvactual2"
           android:layout_width="@dimen/_70mdp"
           android:layout_height="wrap_content"
           android:textSize="@dimen/_15font_mdp"
           android:layout_marginLeft="@dimen/_30mdp"
           android:hint="Actual"/>

   </LinearLayout>
</androidx.cardview.widget.CardView>